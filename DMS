#include <iostream>
using namespace std;

void createNewDirectory();
void listAllFile();

string name;
int main(int argc, char** argv) {
	while(true){
		int menu, files;
	
        cout <<"        MAIN MENU \n" ;
	    cout <<"--------------------------\n" ;
	
	    cout <<" 1. To Display List of Files. \n";
	    cout <<" 2. To Create New Directory. \n";
	    cout <<" 3. To Change the Working Directory. \n";
	    cout <<" 4. Exit. \n";
	    cout <<"Enter the Number: ";
	    cin >> menu;
	
	    switch (menu) {
		case 1:
			cout <<"        LIST FILE DETAIL \n";
			cout <<"---------------------------------\n";
		    cout <<"1. List All Files\n";
		    cout <<"2. List of Extension Files\n";
		    cout <<"3. List of Name Wise\n";
		    cout <<" Enter the Number: "; 
			cin >> files;
			switch (files) {
				case 1: 
                    listAllFile();
                break;
                
			break;	
			
			}
		case 2:
			createNewDirectory();
			break;
			
	    }
	}
	
	return 0;
}
void listAllFile(){
    cout <<"List of All Files \n" << name << endl;
    
}

void createNewDirectory(){
    cout <<"Enter the Directory name: ";
    cin >> name;
    cout << "Current directory: C:|Users|UserName|Documents \n";
	cout << " NewFolder Directory Successfully Created \n";
	cout << "Press any key to continue...";
    cin.ignore();
    cin.get();
    
    

}
