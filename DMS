#include <iostream>
#include <string>
#include <direct.h> // For _mkdir and _getcwd

using namespace std;

void directory() {
    // Buffer to store the current working directory path
    char currentDir[FILENAME_MAX];
    
    // Retrieve the current working directory
    if (_getcwd(currentDir, sizeof(currentDir))) {
        cout << "Current Directory: " << currentDir << "\n";
    } else {
        cout << "Unable to retrieve the current directory.\n";
        return; // Exit if current directory cannot be retrieved
    }

    string name;
    cout << "Enter the Directory name: ";
    getline(cin, name);
    
    // Create the new directory
    if (_mkdir(name.c_str()) == 0) {
        cout << "Directory '" << name << "' created successfully.\n";
        // Display the full path of the new directory
        cout << "Directory location: " << currentDir << "\\" << name << "\n";
    } else {
        cout << "Failed to create directory.\n";
    }
    
    cout << "Press any key to continue...";
    cin.get(); // Wait for the user to press a key
}
